# Uncomment the next line to define a global platform for your project
platform :ios, '8.0'
use_frameworks!
inhibit_all_warnings!


target 'Neck' do

  pod 'SwiftyJSON'        #JSON解析库
  pod 'HandyJSON'

  pod 'ReachabilitySwift'

  #轮播图
  pod 'FSPagerView'

  #图片加载
  pod 'Kingfisher'

  #自动化布局
  pod 'SnapKit'

  # RxSwift的必备库
  pod 'RxSwift'
  pod 'RxCocoa'

#Bmob数据云
  pod 'BmobSDK'

  # 刷新
  pod 'ESPullToRefresh'
  pod 'PKHUD'


  # 推送
  pod 'mob_pushsdk'
  # 登录分享
  pod 'mob_sharesdk'
  pod 'mob_sharesdk/ShareSDKPlatforms/WeChat'   #//（微信sdk不带支付的命令）


  #友盟统计
  pod 'Bugly'

 # 如果采用自定义样式,只需要引入 Core
 pod 'LYEmptyView'
 
 # 多标签页面
 pod 'JXPagingView/Paging'
 pod 'JXSegmentedView'

end
