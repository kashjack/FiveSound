# Uncomment the next line to define a global platform for your project
platform :ios, '8.0'
use_frameworks!
inhibit_all_warnings!


target 'Neck' do

  pod 'SwiftyJSON'        #JSON解析库
  pod 'HandyJSON'

  pod 'ReachabilitySwift'


  #图片加载
  pod 'Kingfisher'

  #自动化布局
  pod 'SnapKit'

  # RxSwift的必备库
  pod 'RxSwift'
  pod 'RxCocoa'

#Bmob数据云
  pod 'BmobSDK'

  # 刷新
  pod 'ESPullToRefresh'
  pod 'PKHUD'


end
